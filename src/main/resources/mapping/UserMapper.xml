<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.jetbrains.hadoop_netdisk.mapper.UserMapper">

    <resultMap id="UserResultMap" type="org.jetbrains.hadoop_netdisk.entity.User">
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="used_capacity" jdbcType="NUMERIC" property="used_capacity" />
        <result column="total_capacity" jdbcType="NUMERIC" property="total_capacity" />
        <result column="age" jdbcType="NUMERIC" property="age" />
        <result column="gender" jdbcType="NUMERIC" property="gender" />
        <result column="bio" jdbcType="VARCHAR" property="bio" />
        <result column="avatar" jdbcType="VARCHAR" property="avatar" />
    </resultMap>

    <select id="query" resultType="org.jetbrains.hadoop_netdisk.entity.User">
        SELECT * FROM hadoop.users WHERE username = #{username};
    </select>

    <insert id="add">
        INSERT INTO hadoop.users(username, password, age, gender, bio, avatar)
        VALUES (#{username}, #{password}, #{age}, #{gender}, #{bio}, #{avatar});
    </insert>

    <delete id="delete">
        DELETE FROM hadoop.users WHERE username = #{username};
    </delete>

    <update id="update">
        UPDATE hadoop.users
        SET password = #{password}, age = #{age}, gender = #{gender}, bio = #{bio}, avatar = #{avatar}
        WHERE username = #{username};
    </update>

    <update id="updateUsedCapacity">
        UPDATE hadoop.users
        SET used_capacity = #{used_capacity}
        WHERE username = #{username};
    </update>
</mapper>